{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "West Europe"
    },
    "env": {
      "value": "prd"
    },
    "namePrefix": {
      "value": "deuro-monitoring"
    },
    "postgresAdminLogin": {
      "value": "monitoring"
    },
    "postgresSkuName": {
      "value": "Standard_D2s_v3"
    },
    "postgresSkuTier": {
      "value": "GeneralPurpose"
    },
    "postgresStorageSizeGB": {
      "value": 128
    },
    "containerAppCpu": {
      "value": "2.0"
    },
    "containerAppMemory": {
      "value": "4.0Gi"
    },
    "containerAppMinReplicas": {
      "value": 2
    },
    "containerAppMaxReplicas": {
      "value": 5
    },
    "logRetentionDays": {
      "value": 90
    },
    "deploymentBlock": {
      "value": "22300000"
    },
    "blockchainId": {
      "value": "1"
    },
    "monitoringInterval": {
      "value": "300000"
    }
  }
}