# dEURO Monitoring V2 Configuration
# Copy this file to .env.monitoring and update with your values

# =======================
# BLOCKCHAIN CONFIGURATION
# =======================

# RPC endpoint for blockchain connection
# Examples:
# - Ethereum Mainnet: https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
# - Polygon: https://polygon-rpc.com
# - Local: http://localhost:8545
RPC_URL=https://your-rpc-endpoint.com

# Blockchain/Chain ID
# 1 = Ethereum Mainnet, 137 = Polygon, 31337 = Local Hardhat
BLOCKCHAIN_ID=1

# Block number where dEURO contracts were first deployed
# This is used as the starting point for historical event scanning
DEPLOYMENT_BLOCK=18500000

# =======================
# DATABASE CONFIGURATION
# =======================

# Option 1: Use individual connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deuro_monitoring
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Option 2: Use connection string (overrides individual parameters if set)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# Enable SSL for database connection (true/false)
DB_SSL=false

# Database connection pool settings
PG_MAX_CLIENTS=10

# Optional: Custom path to database schema file
# DB_SCHEMA_PATH=/path/to/custom/schema.sql

# =======================
# MONITORING CONFIGURATION
# =======================

# How often to check for new events and update state (in milliseconds)
# Default: 300000 (5 minutes)
MONITOR_INTERVAL_MS=300000

# =======================
# LOGGING & ENVIRONMENT
# =======================

# Environment mode (development/production)
NODE_ENV=production

# Timezone for logging (optional)
TZ=UTC

# =======================
# DEPLOYMENT SPECIFIC
# =======================

# For Azure deployments - Application Insights connection string
# APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key

# For container deployments - health check port
# HEALTH_CHECK_PORT=3000